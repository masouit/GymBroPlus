<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TabHost
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tabHost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#272727">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Mo"
                            android:id="@+id/textViewClientName"
                            android:background="#272727"
                            android:layout_column="0"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="7"
                            android:id="@+id/textViewDay"
                            android:textAlignment="center"
                            android:layout_column="1"
                            android:textColor="#FFF"
                            android:background="#272727" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Flat Barbell Bench Press"
                            android:id="@+id/textViewExercise"
                            android:textAlignment="center"
                            android:layout_column="2"
                            android:textColor="#FFF"
                            android:background="#272727" />

                    </TableRow>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:id="@+id/imageView"
                        android:src="@drawable/flat_barbell_bench_press"
                        android:background="#272727"
                        android:baselineAlignBottom="false"
                        android:cropToPadding="false"
                        android:paddingBottom="10dp" />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#272727">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="Set"
                            android:id="@+id/textViewSetHeader"
                            android:layout_column="0"
                            android:gravity="center_horizontal"
                            android:textColor="#00aeef" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="Reps"
                            android:id="@+id/textViewRepsHeader"
                            android:layout_column="1"
                            android:gravity="center_horizontal"
                            android:textColor="#00aeef" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight"
                            android:id="@+id/textViewWeightHeader"
                            android:layout_column="2"
                            android:gravity="center_horizontal"
                            android:textColor="#00aeef" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#272727">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:id="@+id/textViewSet1"
                            android:layout_column="0"
                            android:gravity="center_horizontal"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30"
                            android:id="@+id/textViewReps1"
                            android:layout_column="1"
                            android:gravity="center_horizontal"
                            android:textColor="#FFF" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number|numberDecimal"
                            android:ems="10"
                            android:id="@+id/editTextWeightSet1"
                            android:layout_gravity="right"
                            android:layout_column="2"
                            android:gravity="right"
                            android:text="0"
                            android:textColor="#FFF" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#272727">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:id="@+id/textViewSet2"
                            android:layout_column="0"
                            android:gravity="center_horizontal"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:id="@+id/textViewReps2"
                            android:layout_column="1"
                            android:gravity="center_horizontal"
                            android:textColor="#FFF" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number|numberDecimal"
                            android:ems="10"
                            android:id="@+id/editTextWeightSet2"
                            android:layout_gravity="right"
                            android:layout_column="2"
                            android:gravity="right"
                            android:text="0"
                            android:textColor="#FFF" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#272727">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:id="@+id/textViewSet3"
                            android:gravity="center_horizontal"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:id="@+id/textViewReps3"
                            android:gravity="center_horizontal"
                            android:textColor="#FFF" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number|numberDecimal"
                            android:ems="10"
                            android:id="@+id/editTextWeightSet3"
                            android:layout_gravity="center_horizontal"
                            android:layout_column="2"
                            android:gravity="right"
                            android:text="0"
                            android:textColor="#FFF" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#272727">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:id="@+id/textViewSet4"
                            android:layout_column="0"
                            android:gravity="center_horizontal"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:id="@+id/textViewReps4"
                            android:layout_column="1"
                            android:gravity="center_horizontal"
                            android:textColor="#FFF" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number|numberDecimal"
                            android:ems="10"
                            android:id="@+id/editTextWeightSet4"
                            android:layout_gravity="right"
                            android:layout_column="2"
                            android:gravity="right"
                            android:text="0"
                            android:textColor="#FFF" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#272727">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:id="@+id/textViewSet5"
                            android:layout_column="0"
                            android:gravity="center_horizontal"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:id="@+id/textViewReps5"
                            android:layout_column="1"
                            android:gravity="center_horizontal"
                            android:textColor="#FFF" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number|numberDecimal"
                            android:ems="10"
                            android:id="@+id/editTextWeightSet5"
                            android:layout_gravity="center_horizontal"
                            android:layout_column="2"
                            android:gravity="right"
                            android:text="0"
                            android:textColor="#FFF" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#272727">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Save"
                            android:id="@+id/buttonSave"
                            android:layout_column="2" />
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>
