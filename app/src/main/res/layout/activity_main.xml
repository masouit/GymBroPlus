<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <!--<GridLayout-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent">-->

    <!--</GridLayout>-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:gravity="top|center"
            android:layout_weight="0.5">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/buttonStartTraining"
                android:src="@drawable/button_startexercise_states"
                android:scaleType="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:layout_weight="0.5" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/buttonAddBlueprint"
                android:src="@drawable/button_makeblueprint_states"
                android:scaleType="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:onClick="menuManage_Blueprints"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.5">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/buttonManageExercise"
                android:src="@drawable/button_manageexercise_states"
                android:scaleType="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:onClick="menuManage_Exercises"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:layout_weight="0.5" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/buttonGymBro"
                android:src="@drawable/button_gymbro_states"
                android:scaleType="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:layout_weight="0.5" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
