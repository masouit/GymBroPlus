<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamed.gymbroplus.Manage_Exercises"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Exercise"
                android:id="@+id/buttonAddExercise"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/button_createexercise_states"
                android:onClick="menuAdd_Exercise"
                android:scaleType="fitXY"
                android:background="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Exercises"
                android:id="@+id/buttonShowExercises"
                android:layout_below="@+id/buttonAddExercise"
                android:layout_alignStart="@+id/buttonAddExercise"
                android:src="@drawable/button_showexercise_states"
                android:onClick="menuShow_Exercises"
                android:background="#ffffff"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
